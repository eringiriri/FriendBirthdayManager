<local:BaseWindow x:Class="FriendBirthdayManager.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FriendBirthdayManager.Views"
        xmlns:vm="clr-namespace:FriendBirthdayManager.ViewModels"
        mc:Ignorable="d"
        Title="{DynamicResource MainWindowTitle}"
        Height="750"
        Width="500"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResize">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- 名前入力 -->
        <StackPanel Grid.Row="0" Margin="0,0,0,15">
            <TextBlock Text="{DynamicResource LabelName}" FontWeight="Bold" Margin="0,0,0,5"/>
            <TextBox Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}"
                     MaxLength="200"
                     FontSize="14"/>
        </StackPanel>

        <!-- 誕生日入力 -->
        <StackPanel Grid.Row="1" Margin="0,0,0,15">
            <TextBlock Text="{DynamicResource LabelBirthday}" FontWeight="Bold" Margin="0,0,0,5"/>
            <StackPanel Orientation="Horizontal">
                <TextBox Text="{Binding BirthYear, UpdateSourceTrigger=PropertyChanged}"
                         Width="80"
                         MaxLength="4"
                         VerticalContentAlignment="Center"/>
                <TextBlock Text=" / " Margin="5,0" VerticalAlignment="Center"/>
                <TextBox Text="{Binding BirthMonth, UpdateSourceTrigger=PropertyChanged}"
                         Width="50"
                         MaxLength="2"
                         VerticalContentAlignment="Center"/>
                <TextBlock Text=" / " Margin="5,0" VerticalAlignment="Center"/>
                <TextBox Text="{Binding BirthDay, UpdateSourceTrigger=PropertyChanged}"
                         Width="50"
                         MaxLength="2"
                         VerticalContentAlignment="Center"/>
            </StackPanel>
            <TextBlock Text="{DynamicResource HintBirthdayRequired}"
                       FontSize="10"
                       Foreground="Gray"
                       Margin="0,5,0,0"/>
        </StackPanel>

        <!-- エイリアス入力 -->
        <StackPanel Grid.Row="2" Margin="0,0,0,15">
            <TextBlock Text="{DynamicResource LabelAlias}" FontWeight="Bold" Margin="0,0,0,5"/>
            <ItemsControl ItemsSource="{Binding Aliases}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                            <TextBox Text="{Binding Value, UpdateSourceTrigger=PropertyChanged}"
                                     Width="350"
                                     MaxLength="50"/>
                            <Button Content="{DynamicResource ButtonDelete}"
                                    Command="{Binding DataContext.RemoveAliasCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                    CommandParameter="{Binding}"
                                    Margin="10,0,0,0"
                                    Width="60"/>
                        </StackPanel>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
            <Button Content="{DynamicResource ButtonAddAlias}"
                    Command="{Binding AddAliasCommand}"
                    HorizontalAlignment="Left"
                    Margin="0,5,0,0"/>
        </StackPanel>

        <!-- メモ入力 -->
        <StackPanel Grid.Row="3" Margin="0,0,0,15">
            <TextBlock Text="{DynamicResource LabelMemo}" FontWeight="Bold" Margin="0,0,0,5"/>
            <TextBox Text="{Binding Memo, UpdateSourceTrigger=PropertyChanged}"
                     Height="80"
                     MaxLength="5000"
                     TextWrapping="Wrap"
                     AcceptsReturn="True"
                     VerticalScrollBarVisibility="Auto"/>
        </StackPanel>

        <!-- 通知設定 -->
        <StackPanel Grid.Row="4" Margin="0,0,0,15">
            <TextBlock Text="{DynamicResource LabelNotificationSettings}" FontWeight="Bold" Margin="0,0,0,5"/>
            <ComboBox SelectedIndex="{Binding NotifyDaysBeforeIndex}" Width="200" HorizontalAlignment="Left">
                <ComboBoxItem Content="{DynamicResource NotifyDefault}"/>
                <ComboBoxItem Content="{DynamicResource NotifyNone}"/>
                <ComboBoxItem Content="{DynamicResource NotifyDays1}"/>
                <ComboBoxItem Content="{DynamicResource NotifyDays2}"/>
                <ComboBoxItem Content="{DynamicResource NotifyDays3}"/>
                <ComboBoxItem Content="{DynamicResource NotifyDays5}"/>
                <ComboBoxItem Content="{DynamicResource NotifyDays7}"/>
                <ComboBoxItem Content="{DynamicResource NotifyDays14}"/>
                <ComboBoxItem Content="{DynamicResource NotifyDays30}"/>
            </ComboBox>
        </StackPanel>

        <!-- ボタン -->
        <StackPanel Grid.Row="5" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,15">
            <Button Content="{DynamicResource ButtonRegister}"
                    Command="{Binding SaveCommand}"
                    Width="100"
                    Height="35"
                    FontSize="14"
                    Margin="0,0,10,0"/>
            <Button Content="{DynamicResource ButtonShowList}"
                    Command="{Binding ShowListCommand}"
                    Width="100"
                    Height="35"
                    FontSize="14"/>
        </StackPanel>

        <!-- 直近の誕生日 -->
        <GroupBox Grid.Row="6" Header="{DynamicResource GroupUpcomingBirthdays}" Padding="10" MinHeight="150">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <ItemsControl ItemsSource="{Binding UpcomingBirthdays}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border BorderBrush="LightGray"
                                    BorderThickness="0,0,0,1"
                                    Padding="3,5,3,5"
                                    Margin="0,2"
                                    Cursor="Hand">
                                <Border.InputBindings>
                                    <MouseBinding Gesture="LeftDoubleClick"
                                                  Command="{Binding DataContext.EditFriendCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                  CommandParameter="{Binding}"/>
                                </Border.InputBindings>
                                <StackPanel>
                                    <TextBlock Text="{Binding Name}" FontWeight="Bold" FontSize="13"/>
                                    <TextBlock FontSize="12" Margin="0,2,0,0">
                                        <Run Text="{Binding BirthdayDisplay}"/>
                                        <Run Text=" "/>
                                        <Run Text="{Binding DaysUntilDisplay}" Foreground="Green"/>
                                    </TextBlock>
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </GroupBox>

        <!-- ステータスバー -->
        <StatusBar Grid.Row="7" Margin="0,10,0,0">
            <StatusBarItem>
                <TextBlock Text="{Binding StatusMessage}"/>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</local:BaseWindow>
