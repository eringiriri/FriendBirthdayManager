<local:BaseWindow x:Class="FriendBirthdayManager.Views.AboutWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FriendBirthdayManager.Views"
        mc:Ignorable="d"
        Title="{DynamicResource AboutWindowTitle}"
        Height="450"
        Width="500"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        WindowStyle="SingleBorderWindow">

    <Grid Margin="30">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- アプリ名 -->
        <TextBlock Grid.Row="0"
                   Text="{DynamicResource AppName}"
                   FontSize="24"
                   FontWeight="Bold"
                   HorizontalAlignment="Center"
                   Margin="0,10,0,10"/>

        <!-- バージョン -->
        <TextBlock Grid.Row="1"
                   FontSize="14"
                   HorizontalAlignment="Center"
                   Foreground="Gray"
                   Margin="0,0,0,20">
            <Run Text="{DynamicResource LabelVersion}"/>
            <Run Text=" "/>
            <Run Text="{Binding Version, Mode=OneWay}"/>
        </TextBlock>

        <!-- 区切り線 -->
        <Separator Grid.Row="2" Margin="0,0,0,20"/>

        <!-- 制作者 -->
        <StackPanel Grid.Row="3" Margin="0,0,0,15">
            <TextBlock Text="{DynamicResource LabelAuthor}" FontWeight="Bold" Margin="0,0,0,5"/>
            <TextBlock Text="{Binding Author}" FontSize="14"/>
        </StackPanel>

        <!-- Twitter -->
        <StackPanel Grid.Row="4" Margin="0,0,0,15">
            <TextBlock Text="{DynamicResource LabelTwitter}" FontWeight="Bold" Margin="0,0,0,5"/>
            <TextBlock>
                <Hyperlink Command="{Binding OpenTwitterCommand}" TextDecorations="None">
                    <Run Text="{Binding TwitterUrl, Mode=OneWay}"/>
                </Hyperlink>
            </TextBlock>
        </StackPanel>

        <!-- 連絡先 -->
        <StackPanel Grid.Row="5" Margin="0,0,0,15">
            <TextBlock Text="{DynamicResource LabelContact}" FontWeight="Bold" Margin="0,0,0,5"/>
            <TextBlock Text="{Binding Email}" FontSize="14"/>
        </StackPanel>

        <!-- GitHub -->
        <StackPanel Grid.Row="6" Margin="0,0,0,15">
            <TextBlock Text="{DynamicResource LabelSourceCode}" FontWeight="Bold" Margin="0,0,0,5"/>
            <TextBlock>
                <Hyperlink Command="{Binding OpenGitHubCommand}" TextDecorations="None">
                    <Run Text="GitHub"/>
                </Hyperlink>
            </TextBlock>
        </StackPanel>

        <!-- ライセンス -->
        <StackPanel Grid.Row="7" Margin="0,0,0,15">
            <TextBlock Text="{DynamicResource LabelLicense}" FontWeight="Bold" Margin="0,0,0,5"/>
            <TextBlock Text="{Binding License}" FontSize="14"/>
        </StackPanel>

        <!-- 閉じるボタン -->
        <Button Grid.Row="8"
                Content="{DynamicResource ButtonClose}"
                Width="100"
                Height="35"
                HorizontalAlignment="Center"
                Click="CloseButton_Click"/>
    </Grid>
</local:BaseWindow>
