<Window x:Class="FriendBirthdayManager.Views.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:FriendBirthdayManager.ViewModels"
        mc:Ignorable="d"
        Title="設定 - Friend Birthday Manager"
        Height="550"
        Width="600"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanMinimize">

    <Window.DataContext>
        <vm:SettingsViewModel/>
    </Window.DataContext>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TabControl Grid.Row="0">
            <!-- 通知タブ -->
            <TabItem Header="通知">
                <StackPanel Margin="15">
                    <TextBlock Text="通知時刻:" FontWeight="Bold" Margin="0,0,0,10"/>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,20">
                        <TextBox Text="{Binding NotificationHour}" Width="50" VerticalContentAlignment="Center"/>
                        <TextBlock Text=" : " Margin="5,0" VerticalAlignment="Center"/>
                        <TextBox Text="{Binding NotificationMinute}" Width="50" VerticalContentAlignment="Center"/>
                    </StackPanel>

                    <TextBlock Text="デフォルト通知タイミング:" FontWeight="Bold" Margin="0,0,0,10"/>
                    <ComboBox SelectedIndex="{Binding DefaultNotifyDaysBefore}" Width="200" HorizontalAlignment="Left" Margin="0,0,0,20">
                        <ComboBoxItem Content="当日のみ"/>
                        <ComboBoxItem Content="1日前から"/>
                        <ComboBoxItem Content="2日前から"/>
                        <ComboBoxItem Content="3日前から"/>
                        <ComboBoxItem Content="5日前から"/>
                        <ComboBoxItem Content="7日前から"/>
                        <ComboBoxItem Content="14日前から"/>
                        <ComboBoxItem Content="30日前から"/>
                    </ComboBox>

                    <CheckBox Content="デフォルトで音を鳴らす" IsChecked="{Binding DefaultNotifySound}"/>
                </StackPanel>
            </TabItem>

            <!-- 起動タブ -->
            <TabItem Header="起動">
                <StackPanel Margin="15">
                    <CheckBox Content="Windowsスタートアップに登録"
                              IsChecked="{Binding StartWithWindows}"
                              Margin="0,0,0,10"/>
                    <TextBlock Text="※ アプリケーションを自動的に起動します"
                               FontSize="11"
                               Foreground="Gray"/>
                </StackPanel>
            </TabItem>

            <!-- データタブ -->
            <TabItem Header="データ">
                <StackPanel Margin="15">
                    <Button Content="CSVをエクスポート"
                            Command="{Binding ExportCsvCommand}"
                            Width="200"
                            Height="35"
                            HorizontalAlignment="Left"
                            Margin="0,0,0,15"/>

                    <Button Content="CSVをインポート"
                            Command="{Binding ImportCsvCommand}"
                            Width="200"
                            Height="35"
                            HorizontalAlignment="Left"
                            Margin="0,0,0,15"/>

                    <Button Content="データベースをバックアップ"
                            Command="{Binding BackupDatabaseCommand}"
                            Width="200"
                            Height="35"
                            HorizontalAlignment="Left"
                            Margin="0,0,0,15"/>

                    <TextBlock Text="※ インポートは本ツール出力CSV限定"
                               FontSize="11"
                               Foreground="Gray"
                               Margin="0,10,0,0"/>
                </StackPanel>
            </TabItem>

            <!-- 詳細タブ -->
            <TabItem Header="詳細">
                <StackPanel Margin="15">
                    <TextBlock Text="言語:" FontWeight="Bold" Margin="0,0,0,10"/>
                    <ComboBox SelectedValue="{Binding Language}" Width="200" HorizontalAlignment="Left" Margin="0,0,0,20">
                        <ComboBoxItem Content="日本語" Tag="ja-JP"/>
                        <ComboBoxItem Content="English" Tag="en-US"/>
                    </ComboBox>

                    <TextBlock Text="データベースパス:" FontWeight="Bold" Margin="0,0,0,5"/>
                    <TextBlock Text="%LocalAppData%\FriendBirthdayManager\friends.db"
                               FontSize="11"
                               Foreground="Gray"
                               Margin="0,0,0,15"/>

                    <TextBlock Text="ログファイルパス:" FontWeight="Bold" Margin="0,0,0,5"/>
                    <TextBlock Text="%LocalAppData%\FriendBirthdayManager\logs\"
                               FontSize="11"
                               Foreground="Gray"/>
                </StackPanel>
            </TabItem>
        </TabControl>

        <!-- ボタン -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,15,0,0">
            <Button Content="保存"
                    Command="{Binding SaveCommand}"
                    Width="100"
                    Height="35"
                    FontSize="14"
                    Margin="0,0,10,0"/>
            <Button Content="閉じる"
                    Width="100"
                    Height="35"
                    FontSize="14"
                    Click="CloseButton_Click"/>
        </StackPanel>

        <!-- ステータスバー -->
        <StatusBar Grid.Row="2" Margin="0,10,0,0">
            <StatusBarItem>
                <TextBlock Text="{Binding StatusMessage}"/>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>
