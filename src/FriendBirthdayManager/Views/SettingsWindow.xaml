<local:BaseWindow x:Class="FriendBirthdayManager.Views.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FriendBirthdayManager.Views"
        xmlns:vm="clr-namespace:FriendBirthdayManager.ViewModels"
        mc:Ignorable="d"
        Title="{DynamicResource SettingsWindowTitle}"
        Height="550"
        Width="600"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanMinimize">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TabControl Grid.Row="0">
            <!-- 通知タブ -->
            <TabItem Header="{DynamicResource TabNotification}">
                <StackPanel Margin="15">
                    <TextBlock Text="{DynamicResource LabelNotificationTime}" FontWeight="Bold" Margin="0,0,0,10"/>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,20">
                        <TextBox Text="{Binding NotificationHour}" Width="50" VerticalContentAlignment="Center"/>
                        <TextBlock Text=" : " Margin="5,0" VerticalAlignment="Center"/>
                        <TextBox Text="{Binding NotificationMinute}" Width="50" VerticalContentAlignment="Center"/>
                    </StackPanel>

                    <TextBlock Text="{DynamicResource LabelDefaultNotificationTiming}" FontWeight="Bold" Margin="0,0,0,10"/>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,20">
                        <TextBox Text="{Binding DefaultNotifyDaysBefore, UpdateSourceTrigger=PropertyChanged}"
                                 Width="60"
                                 VerticalContentAlignment="Center"/>
                        <TextBlock Margin="5,0" VerticalAlignment="Center">
                            <Run Text=" "/>
                            <Run Text="{DynamicResource HintDaysBefore}"/>
                        </TextBlock>
                        <TextBlock Text="{DynamicResource HintDaysRange}"
                                   FontSize="11"
                                   Foreground="Gray"
                                   Margin="5,0"
                                   VerticalAlignment="Center"/>
                    </StackPanel>

                    <CheckBox Content="{DynamicResource CheckboxDefaultSound}" IsChecked="{Binding DefaultNotifySound}"/>
                </StackPanel>
            </TabItem>

            <!-- 起動タブ -->
            <TabItem Header="{DynamicResource TabStartup}">
                <StackPanel Margin="15">
                    <CheckBox Content="{DynamicResource CheckboxStartWithWindows}"
                              IsChecked="{Binding StartWithWindows}"
                              Margin="0,0,0,10"/>
                    <TextBlock Text="{DynamicResource HintStartupDescription}"
                               FontSize="11"
                               Foreground="Gray"/>
                </StackPanel>
            </TabItem>

            <!-- データタブ -->
            <TabItem Header="{DynamicResource TabData}">
                <StackPanel Margin="15">
                    <Button Content="{DynamicResource ButtonExportCsv}"
                            Command="{Binding ExportCsvCommand}"
                            Width="200"
                            Height="35"
                            HorizontalAlignment="Left"
                            Margin="0,0,0,15"/>

                    <Button Content="{DynamicResource ButtonImportCsv}"
                            Command="{Binding ImportCsvCommand}"
                            Width="200"
                            Height="35"
                            HorizontalAlignment="Left"
                            Margin="0,0,0,15"/>

                    <Button Content="{DynamicResource ButtonBackupDatabase}"
                            Command="{Binding BackupDatabaseCommand}"
                            Width="200"
                            Height="35"
                            HorizontalAlignment="Left"
                            Margin="0,0,0,15"/>

                    <TextBlock Text="{DynamicResource HintImportCsv}"
                               FontSize="11"
                               Foreground="Gray"
                               Margin="0,10,0,0"/>
                </StackPanel>
            </TabItem>

            <!-- 詳細タブ -->
            <TabItem Header="{DynamicResource TabAdvanced}">
                <StackPanel Margin="15">
                    <TextBlock Text="{DynamicResource LabelLanguage}" FontWeight="Bold" Margin="0,0,0,10"/>
                    <ComboBox SelectedValue="{Binding Language}"
                              SelectedValuePath="Tag"
                              Width="200"
                              HorizontalAlignment="Left"
                              Margin="0,0,0,20">
                        <ComboBoxItem Content="{DynamicResource LanguageJapanese}" Tag="ja-JP"/>
                        <ComboBoxItem Content="{DynamicResource LanguageEnglish}" Tag="en-US"/>
                        <ComboBoxItem Content="{DynamicResource LanguageKorean}" Tag="ko-KR"/>
                    </ComboBox>

                    <TextBlock Text="{DynamicResource LabelDatabasePath}" FontWeight="Bold" Margin="0,0,0,5"/>
                    <TextBlock Text="%LocalAppData%\FriendBirthdayManager\friends.db"
                               FontSize="11"
                               Foreground="Gray"
                               Margin="0,0,0,15"/>

                    <TextBlock Text="{DynamicResource LabelLogPath}" FontWeight="Bold" Margin="0,0,0,5"/>
                    <TextBlock Text="%LocalAppData%\FriendBirthdayManager\logs\"
                               FontSize="11"
                               Foreground="Gray"/>
                </StackPanel>
            </TabItem>
        </TabControl>

        <!-- ボタン -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,15,0,0">
            <Button Content="{DynamicResource ButtonSave}"
                    Command="{Binding SaveCommand}"
                    Width="100"
                    Height="35"
                    FontSize="14"
                    Margin="0,0,10,0"/>
            <Button Content="{DynamicResource ButtonClose}"
                    Width="100"
                    Height="35"
                    FontSize="14"
                    Click="CloseButton_Click"/>
        </StackPanel>

        <!-- ステータスバー -->
        <StatusBar Grid.Row="2" Margin="0,10,0,0">
            <StatusBarItem>
                <TextBlock Text="{Binding StatusMessage}"/>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</local:BaseWindow>
