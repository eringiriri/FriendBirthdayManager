<local:BaseWindow x:Class="FriendBirthdayManager.Views.EditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FriendBirthdayManager.Views"
        xmlns:vm="clr-namespace:FriendBirthdayManager.ViewModels"
        mc:Ignorable="d"
        Title="{DynamicResource EditWindowTitle}"
        Height="650"
        Width="500"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanMinimize">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- 名前入力 -->
        <StackPanel Grid.Row="0" Margin="0,0,0,15">
            <TextBlock Text="{DynamicResource LabelName}" FontWeight="Bold" Margin="0,0,0,5"/>
            <TextBox Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}"
                     MaxLength="200"
                     FontSize="14"/>
        </StackPanel>

        <!-- 誕生日入力 -->
        <StackPanel Grid.Row="1" Margin="0,0,0,15">
            <TextBlock Text="{DynamicResource LabelBirthday}" FontWeight="Bold" Margin="0,0,0,5"/>
            <StackPanel Orientation="Horizontal">
                <TextBox Text="{Binding BirthYear, UpdateSourceTrigger=PropertyChanged}"
                         Width="80"
                         MaxLength="4"
                         VerticalContentAlignment="Center"/>
                <TextBlock Text=" / " Margin="5,0" VerticalAlignment="Center"/>
                <TextBox Text="{Binding BirthMonth, UpdateSourceTrigger=PropertyChanged}"
                         Width="50"
                         MaxLength="2"
                         VerticalContentAlignment="Center"/>
                <TextBlock Text=" / " Margin="5,0" VerticalAlignment="Center"/>
                <TextBox Text="{Binding BirthDay, UpdateSourceTrigger=PropertyChanged}"
                         Width="50"
                         MaxLength="2"
                         VerticalContentAlignment="Center"/>
            </StackPanel>
        </StackPanel>

        <!-- エイリアス入力 -->
        <GroupBox Grid.Row="2" Header="{DynamicResource GroupAlias}" Margin="0,0,0,15" Padding="10">
            <StackPanel>
                <ItemsControl ItemsSource="{Binding Aliases}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                                <TextBox Text="{Binding Value, UpdateSourceTrigger=PropertyChanged}"
                                         Width="300"
                                         MaxLength="50"/>
                                <Button Content="{DynamicResource ButtonDelete}"
                                        Command="{Binding DataContext.RemoveAliasCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                        CommandParameter="{Binding}"
                                        Margin="10,0,0,0"
                                        Width="60"/>
                            </StackPanel>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
                <Button Content="{DynamicResource ButtonAddAlias}"
                        Command="{Binding AddAliasCommand}"
                        HorizontalAlignment="Left"
                        Margin="0,5,0,0"/>
            </StackPanel>
        </GroupBox>

        <!-- メモ入力 -->
        <StackPanel Grid.Row="3" Margin="0,0,0,15">
            <TextBlock Text="{DynamicResource LabelMemo}" FontWeight="Bold" Margin="0,0,0,5"/>
            <TextBox Text="{Binding Memo, UpdateSourceTrigger=PropertyChanged}"
                     Height="100"
                     MaxLength="5000"
                     TextWrapping="Wrap"
                     AcceptsReturn="True"
                     VerticalScrollBarVisibility="Auto"/>
        </StackPanel>

        <!-- 通知設定 -->
        <GroupBox Grid.Row="4" Header="{DynamicResource GroupNotificationSettings}" Margin="0,0,0,15" Padding="10">
            <StackPanel>
                <CheckBox Content="{DynamicResource CheckboxEnableNotification}" IsChecked="{Binding NotifyEnabled}" Margin="0,0,0,10"/>
                <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                    <TextBlock Text="{DynamicResource LabelNotificationTiming}" VerticalAlignment="Center" Margin="0,0,10,0"/>
                    <ComboBox SelectedIndex="{Binding NotifyDaysBeforeIndex}" Width="150">
                        <ComboBoxItem Content="{DynamicResource NotifyDefault}"/>
                        <ComboBoxItem Content="{DynamicResource NotifyNone}"/>
                        <ComboBoxItem Content="{DynamicResource NotifyDays1}"/>
                        <ComboBoxItem Content="{DynamicResource NotifyDays2}"/>
                        <ComboBoxItem Content="{DynamicResource NotifyDays3}"/>
                        <ComboBoxItem Content="{DynamicResource NotifyDays5}"/>
                        <ComboBoxItem Content="{DynamicResource NotifyDays7}"/>
                        <ComboBoxItem Content="{DynamicResource NotifyDays14}"/>
                        <ComboBoxItem Content="{DynamicResource NotifyDays30}"/>
                    </ComboBox>
                </StackPanel>
                <CheckBox Content="{DynamicResource CheckboxEnableSound}" IsChecked="{Binding NotifySoundEnabled}"/>
            </StackPanel>
        </GroupBox>

        <!-- ボタン -->
        <StackPanel Grid.Row="5" Orientation="Horizontal" HorizontalAlignment="Center">
            <Button Content="{DynamicResource ButtonSave}"
                    Command="{Binding SaveCommand}"
                    Width="100"
                    Height="35"
                    FontSize="14"
                    Margin="0,0,10,0"/>
            <Button Content="{DynamicResource ButtonDelete}"
                    Command="{Binding DeleteCommand}"
                    Width="100"
                    Height="35"
                    FontSize="14"
                    Margin="0,0,10,0"
                    Background="#FFCCAA"/>
            <Button Content="{DynamicResource ButtonCancel}"
                    Width="100"
                    Height="35"
                    FontSize="14"
                    Click="CancelButton_Click"/>
        </StackPanel>
    </Grid>
</local:BaseWindow>
