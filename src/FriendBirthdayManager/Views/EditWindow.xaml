<Window x:Class="FriendBirthdayManager.Views.EditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:FriendBirthdayManager.ViewModels"
        mc:Ignorable="d"
        Title="友人情報の編集 - Friend Birthday Manager"
        Height="650"
        Width="500"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanMinimize">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- 名前入力 -->
        <StackPanel Grid.Row="0" Margin="0,0,0,15">
            <TextBlock Text="名前: *必須" FontWeight="Bold" Margin="0,0,0,5"/>
            <TextBox Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}"
                     MaxLength="200"
                     FontSize="14"/>
        </StackPanel>

        <!-- 誕生日入力 -->
        <StackPanel Grid.Row="1" Margin="0,0,0,15">
            <TextBlock Text="誕生日:" FontWeight="Bold" Margin="0,0,0,5"/>
            <StackPanel Orientation="Horizontal">
                <TextBox Text="{Binding BirthYear, UpdateSourceTrigger=PropertyChanged}"
                         Width="80"
                         MaxLength="4"
                         VerticalContentAlignment="Center"/>
                <TextBlock Text=" / " Margin="5,0" VerticalAlignment="Center"/>
                <TextBox Text="{Binding BirthMonth, UpdateSourceTrigger=PropertyChanged}"
                         Width="50"
                         MaxLength="2"
                         VerticalContentAlignment="Center"/>
                <TextBlock Text=" / " Margin="5,0" VerticalAlignment="Center"/>
                <TextBox Text="{Binding BirthDay, UpdateSourceTrigger=PropertyChanged}"
                         Width="50"
                         MaxLength="2"
                         VerticalContentAlignment="Center"/>
            </StackPanel>
        </StackPanel>

        <!-- エイリアス入力 -->
        <GroupBox Grid.Row="2" Header="エイリアス" Margin="0,0,0,15" Padding="10">
            <StackPanel>
                <ItemsControl ItemsSource="{Binding Aliases}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                                <TextBox Text="{Binding Value, UpdateSourceTrigger=PropertyChanged}"
                                         Width="300"
                                         MaxLength="50"/>
                                <Button Content="削除"
                                        Command="{Binding DataContext.RemoveAliasCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                        CommandParameter="{Binding}"
                                        Margin="10,0,0,0"
                                        Width="60"/>
                            </StackPanel>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
                <Button Content="+ エイリアスを追加"
                        Command="{Binding AddAliasCommand}"
                        HorizontalAlignment="Left"
                        Margin="0,5,0,0"/>
            </StackPanel>
        </GroupBox>

        <!-- メモ入力 -->
        <StackPanel Grid.Row="3" Margin="0,0,0,15">
            <TextBlock Text="メモ:" FontWeight="Bold" Margin="0,0,0,5"/>
            <TextBox Text="{Binding Memo, UpdateSourceTrigger=PropertyChanged}"
                     Height="100"
                     MaxLength="5000"
                     TextWrapping="Wrap"
                     AcceptsReturn="True"
                     VerticalScrollBarVisibility="Auto"/>
        </StackPanel>

        <!-- 通知設定 -->
        <GroupBox Grid.Row="4" Header="通知設定" Margin="0,0,0,15" Padding="10">
            <StackPanel>
                <CheckBox Content="通知を有効にする" IsChecked="{Binding NotifyEnabled}" Margin="0,0,0,10"/>
                <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                    <TextBlock Text="通知タイミング:" VerticalAlignment="Center" Margin="0,0,10,0"/>
                    <ComboBox SelectedIndex="{Binding NotifyDaysBeforeIndex}" Width="150">
                        <ComboBoxItem Content="デフォルト設定を使用"/>
                        <ComboBoxItem Content="通知なし"/>
                        <ComboBoxItem Content="1日前から"/>
                        <ComboBoxItem Content="2日前から"/>
                        <ComboBoxItem Content="3日前から"/>
                        <ComboBoxItem Content="5日前から"/>
                        <ComboBoxItem Content="7日前から"/>
                        <ComboBoxItem Content="14日前から"/>
                        <ComboBoxItem Content="30日前から"/>
                    </ComboBox>
                </StackPanel>
                <CheckBox Content="音を鳴らす" IsChecked="{Binding NotifySoundEnabled}"/>
            </StackPanel>
        </GroupBox>

        <!-- ボタン -->
        <StackPanel Grid.Row="5" Orientation="Horizontal" HorizontalAlignment="Center">
            <Button Content="保存"
                    Command="{Binding SaveCommand}"
                    Width="100"
                    Height="35"
                    FontSize="14"
                    Margin="0,0,10,0"/>
            <Button Content="削除"
                    Command="{Binding DeleteCommand}"
                    Width="100"
                    Height="35"
                    FontSize="14"
                    Margin="0,0,10,0"
                    Background="#FFCCAA"/>
            <Button Content="キャンセル"
                    Width="100"
                    Height="35"
                    FontSize="14"
                    Click="CancelButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
